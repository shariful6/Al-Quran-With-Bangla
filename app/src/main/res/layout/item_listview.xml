<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/serial_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ayat"
            android:gravity="center"
            android:text="114"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="120dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/serial_id"
            android:layout_toRightOf="@+id/serial_id"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_banglaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/bdfont"
                android:layout_marginTop="5dp"
                android:text="Bangla Name: "
                android:textColor="@color/design_default_color_primary" />

            <TextView
                android:id="@+id/meaning_banglaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/bdfont"
                android:text="Bangla Meaning: "
                android:textSize="14dp"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="105dp"
            android:layout_marginEnd="2dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/last"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/layout1"
            android:layout_toLeftOf="@+id/last"
            android:layout_marginRight="2dp">

            <TextView
                android:id="@+id/name_englishID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:text="Name English:"
                android:textColor="@color/design_default_color_primary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/meaning_englishID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:maxLength="16"
                android:text="Name English:"
                android:textColor="@color/black"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/last"
            android:layout_marginStart="7dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/quran"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toStartOf="@+id/playPauseBtn_id"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/playPauseBtn_id"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp">


            <TextView
                android:id="@+id/ayatID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/placeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mokka"
                android:textColor="@color/black"
                android:textSize="8sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/playPauseBtn_id"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_play_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>